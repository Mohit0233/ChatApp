<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/cream</item>
        <item name="colorOnSecondary">@color/small_fab</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ChatApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LaunchTheme" parent="Theme.ChatApp.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowActivityTransitions">@null</item>
        <item name="android:windowBackground">@drawable/launch_light</item>
    </style>

    <style name="ChatActivityTheme" parent="Theme.ChatApp.NoActionBar">
        <item name="android:windowBackground">@drawable/chat_window_background</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/divider_gray</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.ChatApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChatApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomButton" parent="@style/Widget.MaterialComponents.Button">

        <item name="android:textColor">@color/primary_button_text_color_selector</item>
        <item name="colorButtonNormal">@color/primary_button_color_selector</item>
        <item name="colorControlHighlight">@color/buttonPressOverlay</item>

    </style>

    <style name="ListItemTitle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/list_item_title</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListItemSubtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/list_item_sub_title</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Text">
        <item name="android:textColor">@color/text_description</item>
        <item name="android:shadowColor">@color/text_field_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">@null</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>
    <style name="Text.Description">
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">@null</item>
        <item name="android:textColor">@color/text_description</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">@null</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="RegistrationTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/reg_title_color</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/primary_button_text_color_selector</item>
        <item name="colorButtonNormal">@color/primary_button_color_selector</item>
        <item name="colorControlHighlight">@color/buttonPressOverlay</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ActionBarButtonStyle">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="StickerUpdateBadge">
        <item name="android:background">@drawable/sticker_update_badge</item>
        <item name="android:layout_width">9dp</item>
        <item name="android:layout_height">9dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>