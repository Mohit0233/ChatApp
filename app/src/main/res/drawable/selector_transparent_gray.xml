<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#e5e5e5" android:endColor="#e5e5e5" android:angle="90"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#ffff9900" android:endColor="#ffffcc33" android:angle="90" android:centerColor="#ffffcc00"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#00000000" android:endColor="#00000000" android:angle="90"/>
        </shape>
    </item>
</selector>
