<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_action_bar</item>
        <item name="colorPrimaryVariant">@color/dark_background</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/cream</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/dark_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ChatApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LaunchTheme" parent="Theme.ChatApp.NoActionBar">

        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowActivityTransitions">false</item>
        <item name="android:windowBackground">@drawable/launch_dark</item>

    </style>


    <style name="ChatActivityTheme" parent="Theme.ChatApp.NoActionBar">
        <item name="android:windowBackground">@drawable/chat_window_background</item>
    </style>

</resources>