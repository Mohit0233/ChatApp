<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="8dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/country_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="start"
        android:paddingEnd="16dp"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/country_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/list_item_title"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/country_second_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="start"
            android:textColor="@color/list_item_sub_title"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/country_code"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="5dp"
        android:gravity="end|center_vertical|center_horizontal|center"
        android:textColor="@color/list_item_sub_title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/countrypicker_checkmark"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="12dp" />
</LinearLayout>
