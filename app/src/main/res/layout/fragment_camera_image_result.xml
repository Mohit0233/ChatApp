<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.home.CameraImageResultFragment">


    <ImageView
        android:id="@+id/capturedImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <FrameLayout
        android:id="@+id/bottomFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#5E000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/capturedImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/capturedImage"
        app:layout_constraintTop_toTopOf="@+id/textView3">

    </FrameLayout>

    <EditText
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:textColorHint="#3CFFFFFF"
        android:textColor="@color/white"
        android:background="@null"
        android:focusedByDefault="false"
        android:hint="Add a caption"
        android:maxLines="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/enterButton"
        app:layout_constraintStart_toEndOf="@+id/addImageButton" />

    <ImageButton
        android:id="@+id/addImageButton"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintBottom_toBottomOf="@id/bottomFrameLayout"
        app:layout_constraintStart_toStartOf="@+id/bottomFrameLayout"
        app:layout_constraintTop_toTopOf="@+id/bottomFrameLayout" />

    <ImageButton
        android:id="@+id/enterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/check_button"
        app:layout_constraintBottom_toTopOf="@+id/bottomFrameLayout"
        app:layout_constraintEnd_toEndOf="@id/bottomFrameLayout"
        app:layout_constraintTop_toTopOf="@+id/bottomFrameLayout" />

    <ImageButton
        android:id="@+id/emojiButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_emoji_emotions_24"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/bottomFrameLayout"
        app:layout_constraintStart_toStartOf="@id/bottomFrameLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>