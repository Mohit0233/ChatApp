<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:id="@+id/linearLayoutPhoneNumberItem"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="12dp"
        android:src="@drawable/ic_settings_phone"
        app:tint="@color/phone_icon_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/titlePhoneNumberItem"
            style="@style/ListItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5" />

        <TextView
            android:id="@+id/subtitlePhoneNumberItem"
            style="@style/ListItemSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/radioPhoneNumberItem"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="24dp"
        android:clickable="false"
        android:duplicateParentState="true"
        android:focusable="false" />
</LinearLayout>
